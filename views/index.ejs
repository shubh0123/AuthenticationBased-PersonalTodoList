<!-- Home page for doing login and Signup -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Authentication</title>
    <link rel="stylesheet" href="css/style.css">

    <style>
         .container {
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .container h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .container p {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
        .container a {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            text-decoration: none;
            color: #000;
            padding: 1rem 2rem;
            border: 1px solid #000;
            border-radius: 5px;
        }
        .container a:hover {
            background-color: #000;
            color: #fff;
        }
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #000;
            padding: 1rem 2rem;
       

        }
        nav a {
            color: #fff;
            text-decoration: none;
            font-size: 1.5rem;

        }
        nav a:hover {
            color: #0ac1f4;
        }
        nav div {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        nav div a {
            margin-left: 1rem;
        }
        /* make navbar sticky */
        nav {
            position: sticky;
            top: 0;
            
        }



    </style>

</head>

<body>
    <!-- link for todo list -->
    <nav>
      <div>
        <a href="/">Home</a>
        <a href="/todo">Todo</a>
      </div>
      <div id="user">
        <% if (user) { %>
            <p style="color: #fff;">Welcome, <%= user.name %></p>
            <a href="/logout">Logout</a>
         <% } %>
        
     </div>
    </nav>
    

    <div class="container">
        <!-- Welcome message for the user in todo website-->
        <h1>Welcome to the Todo List</h1>

    
        <p>Please login or signup to continue</p>
        <a href="login">Login</a>
        <a href="signup">Signup</a>
    </div>
</body>

</html>