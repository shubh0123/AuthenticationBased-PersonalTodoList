<!-- to do application -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Assignment 9</title>
    <link rel="stylesheet" href="todo.css">
    <style>
        body {
            background-color: #f2f2f2;
        }
        /* Enhance the design of to do list */

        h1 {
            text-align: center;
            margin-top: 20px;
            font-size: 50px;
            color: #4CAF50;
        }




        .input {
            text-align: center;
            margin-top: 20px;

        }

        .input input {
            width: 300px;
            height: 30px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 20px;
            padding-left: 10px;
        }

        .input button {
            width: 100px;
            height: 30px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 20px;
            background-color: #4CAF50;
            color: white;
            margin-left: 10px;
        }

        .todoList {
            text-align: center;
            margin-top: 20px;
        }

        .todoList ol {
            width: 400px;
            height: 400px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: auto;
            padding: 0px;
           
            overflow: auto;
        }

        .todoList ol li {
            width: 100%;
            height: 40px;
            border-bottom: 1px solid #ccc;
            font-size: 20px;
            line-height: 40px;
            padding-left: 10px;
        }

        .delete {
            text-align: center;
            margin-top: 20px;

        }

        .delete input {
            width: 300px;
            height: 30px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 20px;
            padding-left: 10px;
        }

        .delete button {
            width: 150px;
            height: 30px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 20px;
            background-color: #4CAF50;
            color: white;
            margin-left: 10px;
        }
        .user {
            text-align: right;
            margin-right: 20px;
            color: #4CAF50;
            font-weight: bolder;
            font-style: italic ;

        }
        .user a{
            text-decoration: none;
            color: #4CAF50;
            font-weight: bolder;
            font-style: italic ;
            border: 1px solid #4CAF50;
            padding: 5px;
            border-radius: 5px;
            background-color: #f2f2f2;
        }
        nav{
            background-color: #f2f2f2;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            
        }
        nav a{
            text-decoration: none;
            color: #4CAF50;
            font-weight: bolder;
            font-style: italic ;
            border: 1px solid #4CAF50;
            padding: 5px;
            border-radius: 5px;
            background-color: #f2f2f2;
        }
        nav a:hover{
            font-size: large;
        }





        </style>
</head>
<body>
    <nav>
        <div>
          <a href="/">Home</a>
        </div>
        <div class="user">
            <p>Welcome, <%= user.name %></p>
            <a href="/logout">Logout</a>
        </div>
      </nav>
    <!-- Show user name on top right -->


    <h1>To Do List</h1>


<!-- Input buttton -->
    <div class="input">
        <input type="text" id="input" placeholder="Enter a task">
        <button id="add">Add</button>
    </div>
<!-- List -->
    <div class="todoList">
        <ol id="todoList">
       
        </ol>

    </div>



<!-- Script -->
    <script src="todo.js"></script>

    


</body>

</html>

