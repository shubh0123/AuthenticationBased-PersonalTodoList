<!-- Login Page for authentication -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Login</title>
        <!-- <link rel="stylesheet" href="css/style.css"> -->
        <style>
            .container {
                width: 100%;
                height: 100vh;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }
            .container h1 {
                font-size: 3rem;
                margin-bottom: 1rem;
            }
            .container p {
                font-size: 1.5rem;
                margin-bottom: 1rem;
            }
            .container a {
                font-size: 1.5rem;
                margin-bottom: 1rem;
                text-decoration: none;
                color: #000;
                padding: 1rem 2rem;
                border: 1px solid #000;
                border-radius: 5px;
            }
            .container a:hover {
                background-color: #0ac1f4;
                color: #fff;
            }
            .container form {
                width: 50%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }
            .container form input {
                width: 100%;
                padding: 1rem 2rem;
                margin-bottom: 1rem;
                border: 1px solid #000;
                border-radius: 5px;
            }
            .container form input:focus {
                outline: none;
            }
            .container form button {
                width: 100%;
                padding: 1rem 2rem;
                margin-bottom: 1rem;
                border: 1px solid #000;
                border-radius: 5px;
                background-color: #000;
                color: #fff;
                font-size: 1.5rem;
                cursor: pointer;
            }
            .container form button:hover {
                background-color: #0ac1f4;
                color: #fff;
            }
            nav {
                display: flex;
                justify-content: space-between;
                align-items: center;
                background-color: #000;
                padding: 1rem 2rem;
                position: sticky;
                top: 0;

            }
            nav a {
                color: #fff;
                text-decoration: none;
                font-size: 1.5rem;
            }
            nav a:hover {
                color: #0ac1f4;
            }
     
        </style>
    </head>
    <body>
       <nav>
            <div>
                <a href="/">Home</a>
            </div>
            <div>
                <a href="/todo">Todo</a> 
            </div>
       </nav>
       
        <div class="container">
            <h1>Login</h1>
            <p>Please enter your credentials to login</p>
            <div id="error">
                <% if (error) { %>
                     <p style="color: red;"><%= error %></p>
                 <% } %>
                
             </div>
             
            <form action="login" method="POST">
                <input type="text" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Login</button>
            </form>
            <a href="signup">Signup</a>
        </div>
        <script src="script"></script>
    </body>
</html>
